{
  "include": ["*/scriptlets/**/*"],
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "Preserve",
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "useDefineForClassFields": false,
    "moduleDetection": "force",
    "paths": {
      "~/*": ["../*"]
    }
  }
}
